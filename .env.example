# .env.example
# Copy this to .env and fill in your actual values

# Google Gemini API (for transcription)
GEMINI_API_KEY=your_gemini_api_key_here

# Grok-3 API (for summaries)
AI_SUMMARY_API_ENDPOINT=https://api.bltcy.ai/v1/chat/completions
AI_SUMMARY_API_AUTHORIZATION_HEADER=Bearer your_grok_api_key_here
AI_SUMMARY_API_MODEL_NAME=grok-3

# App Security
VALID_API_KEY=your_secret_api_key_here

# Optional: Audio Processing
SEGMENT_LENGTH_MS=600000  # 10 minutes in milliseconds